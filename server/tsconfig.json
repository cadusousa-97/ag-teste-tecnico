{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"]
  },
  "include": [
    "*.ts",
    "tests/**/*.ts",
    "schemas/**/*.ts",
    "routes/**/*.ts",
    "controllers/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
